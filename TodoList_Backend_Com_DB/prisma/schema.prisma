generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  Int @id @default(autoincrement())
  name String 
  email String @unique
  password String
  task Tasks[]
  groupTasks GroupTasks[]

}

model Tasks{
  id Int @id @default(autoincrement())
  name String
  descricao String?
  status Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  creator User @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  group GroupTasks @relation(fields: [groupId], references: [id], onDelete: Cascade)
  creatorId Int
  groupId Int

  @@index([creatorId])
  @@index([groupId])
  }

model GroupTasks{
  id Int @id @default(autoincrement())
  name String
  tasks Tasks[]
  creator User @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  creatorId Int

  @@index([creatorId])
}
